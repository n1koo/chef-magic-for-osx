[alias]
  co = checkout
  ci = commit
  st = status
  pr = pull --rebase
  graph = log --graph --oneline --decorate
  standup = shortlog --since=yesterday

[user]
  email = <%= node["user"]["email"] %>
  name = <%= node["user"]["name"] %>

[push]
  default = current

[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile = ~/.gitignore_global



